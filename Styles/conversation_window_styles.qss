* {
    font-size: 18px;
    color: white;
}

QScrollArea {
    background: rgba(0, 0, 0, 0.6);
}

/* Box of the slider */
QScrollBar:vertical {
    background: rgb(121, 121, 121);
    width: 12%;
}

/* Horizontal and vertical slider itself */
QScrollBar::handle {
    background: lightcoral;
    border-radius: 6px;
}

#content {
    background: rgba(0, 0, 0, 0);  /* opaque */
    margin: 5%;
}

QPushButton#answer_button {
    background: none;
    color: lightcoral;
    border: none;
    padding: 8%;
}

QPushButton#answer_button:hover {
    color: rgba(255, 0, 0, 1);
    border: 2px dashed red;
}

QPushButton#selected_answer_button {
    background: none;
    color: rgba(255, 0, 0, 1);
    border: 2px solid red;
    padding: 8%;
}

QPushButton#finish_button {
    background: rgba(255, 0, 0, 1);
    color: white;
    border: 2px solid red;
    border-radius: 12px;
}

QPushButton#finish_button:hover {
    background: rgba(255, 0, 0, 0.5);
}

QToolButton#close_button {
    background: coral;
}
